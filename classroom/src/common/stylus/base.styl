@import "variable.styl"

body, html
  line-height: 1
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
  background: $color-background
  color: $color-text

*, *::before, *::after {
  box-sizing border-box
}
.border-1px-full:after {
  width: 100%
  height: 100%;
}
@media screen and (-webkit-min-device-pixel-ratio: 1.5) {
  .border-1px:after {
    width: 150%;
    height: 150%;
    transform: scale(.666666);
  }
}

@media screen and (-webkit-min-device-pixel-ratio: 2) {
  .border-1px:after {
    width: 200%;
    height: 200%;
    transform: scale(.5);
  }
}

@media screen and (-webkit-min-device-pixel-ratio: 3) {
  .border-1px:after {
    width: 300%;
    height: 300%;
    transform: scale(.333333);
  }
}

.dialog {
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 1000
  margin: auto
  display: block
  width: 100%
  height: 100%
  .mask {
    position: absolute
    width: 100%
    height: 100%
    background-color: #25262d
    opacity: .4
  }
  .dialog-container {
    position: absolute
    top: 50%
    left: 50%
    width: auto
    min-width: 100%
    transform: translate(-50%, -50%)
  }
}

/* 二维码支付弹窗 */
.qrpay-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 1020;
  .withdraw-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: 0 auto;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, .6);
  }
  .dialog-main {
    position: relative;
    width: 85%;
    max-width: 400px;
    border-radius: 5px;
    background-color: #ffffff;
    .dialog-header {
      height: 50px;
      border-radius: 5px;
      background-color: $color-background-d;
      .title {
        text-align: center;
        line-height: 50px;
        font-weight: 500;
        font-size: 15px;
        color: $color-text;
      }
    }

  }
  .dialog-body {
    padding: 20px 20px 0;
    text-align: center;
    .qrpay-tit {
      font-size: 15px;
      color: $color-text;
      line-height: 20px;
      font-weight: 400;
      text-align: center;
      .num {
        color: $color-danger;
      }
    }
    .qr-card {
      margin-top: -20px;
      padding: 20px;
    }
  }
}

.slideFade-enter-active {
  transition: all .5s ease;
}

.slideFade-leave-active {
  transition: all 0s;
}

.slideFade-enter {
  transform: translateX(10px);
  opacity: 0;
}

.slideFade-leave,
.slideFade-leave-to {
  display: none
}

.fade-enter-active {
  transition: all .3s ease;
}

.fade-leave-active {
  transition: all 0s;
}

.fade-enter {
  opacity: 0;
}

.fade-leave,
.fade-leave-to {
  display: none;
}

.bounceDown-enter-active,
.bounceDown-leave-active {
  transition: all .3s ease;
}

.bounceDown-enter {
  opacity: 0;
  transform: translateY(-30px);
}

// .bounceDown-leave,
.bounceDown-leave-to {
  opacity: 0;
  transform: translateY(-30px);
}

.bounceUp-enter-active,
.bounceUp-leave-active {
  transition: all .3s ease;
}

.bounceUp-enter {
  opacity: 0;
  transform: translateY(30px);
}

// .bounceUp-leave,
.bounceUp-leave-to {
  opacity: 0;
  transform: translateY(30px);
}